<Window x:Class="DirBackupper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirBackupper"
        xmlns:views="clr-namespace:DirBackupper.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="284" Width="622">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Margin="0,8">
            <TabItem Header="Directory">
                <views:BackupDirSelectionView />
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8">
            <Button Content="DO IT" Width="64" Height="28" />
        </StackPanel>
    </Grid>
</Window>
